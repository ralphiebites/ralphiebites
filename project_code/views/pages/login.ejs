<%- include ('../partials/header') %>

<main class="container h-100 d-flex align-items-center justify-content-center">
    <div class="container h-100 d-flex align-items-center justify-content-center">
        <form action="/login" method="post">
            <% if (locals.message) { %>
            <div class="alert alert-danger alert-dismissible fade show <%- locals.error ? 'visible' : 'invisible' %>" role="alert">
                Incorrect username or password!
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>
            <h1 class="mb-4">Login</h1>
            <div class="d-flex justify-content-between mb-3">
                <label for="username" class="text-center text-uppercase fw-bold form-label me-5">Username</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="e.g. RalphieBuffalo">
            </div>
            <div class="d-flex justify-content-between mb-3">
                <label for="password" class="text-center text-uppercase fw-bold form-label me-5">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter password">
            </div>
            <div class="d-flex justify-content-between">
                <p>Don't have an account? <a href="/register">Register</a></p>
            </div>
            <div>
                <button type="submit" class="btn btn-primary" style="padding: 10px 300px; margin: 10px 5px;">Login</button>
            </div>
        </form>
    </div>
</main>


<%- include ('../partials/footer') %>